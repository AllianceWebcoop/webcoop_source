                      attrs="{'invisible':['|',('is_manual_compute','=',False),('state','!=','draft')]}"/>
              </div>
        </field>
        <field name="interest_amount" position="replace">
              <label for="interest_amount" attrs="{'invisible':[('is_manual_compute','=',False)]}"/>
